extends ../../includes/layout-dashboard

block content
  ol.breadcrumb
    li.breadcrumb-item
      a(href="/dashboard") Home
    li.breadcrumb-item.active
      span User Register
  h1.page-header User Register
  include ../../includes/delete-confirm
  include ../../includes/unlock-confirm
  div.table-responsive
    table#list.table.table-striped
      thead
        tr
          th #
          th Name
          th Role
          th Status
          th.actions-2
            a#adder.btn.btn-success.list-action-text(href="./user-register/entry", role="button", title="Add")
              i.fa.fa-plus
      tbody
  script.
    $(document).ready(function() {
      var token = "!{token}";
      $('div.sidebar-sticky li.nav-item').removeClass('active');
      $('li#menu-user-register').addClass('active');
      $('div#admin_subitems').addClass('show');
      var access = ("#{permission.access}").split(",");
      if (access[1] != "1") $("#adder").hide();

      $.fn.dataTable.ext.errMode = 'none';
      var table = $('table#list').on('error.dt', function(e, settings, techNote, message) {
          alert('Read data error!');
        }).DataTable({
          "autoWidth": true,
          "ajax": { 
            "url": "/api/user?columns=user.id,user.username,user.status,user_role.role&join=left,user_role,roleid,eq,user_role.id",
            "headers": {"authorization": "Bearer " + token},
            "dataSrc": "user"
          },
          "columns": [
              { "data": "id" },
              { "data": "username", "className": "mm"},
              { "data": "role" },
              { "data": "status" },
              { "data": "actions", "className": "nowrap" }
          ],
          "columnDefs": [
            { targets: 0, render: dataTableIndexRenderer() },
            { targets: 3, render: dataTableUnlockRenderer() },
            { targets: 4, orderable: false, render: dataTableActionsRendererOld("./user-register/edit", "#{permission.access}") }
          ]
      });

      $('#dialogDeleteConfirm').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var id = button.data('id');
        $(this).attr('data-id', id);
        $(this).find('#dialogAccept').on('click', function(ev) {
          console.log("delete");
          var deleteUrl = '/user-register/delete/' + id;
          doDelete(deleteUrl, token, function() {
            table.ajax.reload();
          });
        });
      }).on('hide.bs.modal', function (event) {
        $(this).attr('data-id', '');
        $(this).find('#dialogAccept').off('click');
      });

      $('#dialogUnlockConfirm').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var id = button.data('id');
        $(this).attr('data-id', id);
        $(this).find('#dialogAccept').on('click', function(ev) {
          console.log("unlock");
          var unlockUrl = '/user-register/unlock/' + id;
          console.log("unlockUrl ", unlockUrl);
          doUnlock(unlockUrl, token, function() {
            table.ajax.reload();
          });
        });
      }).on('hide.bs.modal', function (event) {
        $(this).attr('data-id', '');
        $(this).find('#dialogAccept').off('click');
      });

    });