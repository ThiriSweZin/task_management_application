extends ../../includes/layout-dashboard

block content
  ol.breadcrumb
    li.breadcrumb-item
      a(href="/dashboard") Home
    li.breadcrumb-item
      a(href="/sub-category") Sub Category
    li.breadcrumb-item.active
      span Entry
  h1.page-header Sub Category Entry
  div.row.from-wrapper
    div.alert.alert-dismissible#alert(role='alert')
      strong.alert-title#alertTitle
      span#alertMessage
      button.close(type='button', data-hide='alert', aria-label='Close')
        span(aria-hidden='true') &times;

    form.form-horizontal#entryForm(method='post', action=`${postUrl}`, autocomplete='off')
      input#recordid(type='hidden', name='id', value=params.id)
      input#createddate(type='hidden', name='createddate', value=params.createddate)

      div.form-group.row
        label.col-sm-2.control-label(for='categoryid') Category
        div.col-sm-10
          select.form-control.mm.selectpicker#categoryid(name='categoryid', value=params.categoryid, data-value=params.categoryid, data-live-search="true", data-size="8", required)

      div.text-right#sub-category-name
      div.form-group.row
        label.col-sm-2.control-label(for='sub-category') Sub Category
        div.col-sm-10
          input.form-control.mm#sub-category(type='text', name='sub_category', value=params.sub_category, maxlength="55", required autofocus)

      div.row.justify-content-center.form-actions
        button.btn.btn-primary#submitBtn(type='submit', role='button') Save
        a.btn.btn-secondary#actionCancel(href=listUrl, role='button') Cancel

    form#postSuccessForm(method='GET', action=listUrl)
  script.
    $(document).ready(function() {
      var token = "!{token}";

      $('div.sidebar-sticky li.nav-item').removeClass('active');
      $('li#menu-sub-category').addClass('active');
      $('div#general_subitems').addClass('show');

      $("select#categoryid").Template({
        "template": "<option value='${=id}'>${=category}</option>",
        "ajax": {
          url: "/api/category?order=category+0,asc",
          "headers": { "authorization": "Bearer " + token },
          "dataSrc": "category"
        }
      }).on('completed', function() {
        var selectedVal = $('#categoryid').data('value');
        console.log("selectedVal ", selectedVal);
        if (selectedVal) {
          $("#categoryid option[value='" + selectedVal + "']").prop('selected', true);
        }
        $('#categoryid').selectpicker('refresh');
      });

      $("#alert").hide();

      $("#sub-category-name").hide();
      $("#sub-category").on('change keyup',function(){
        console.log("category key up ");
        var recordid = $("#recordid").val();
        var subcategory_name = $("#sub-category").val();
        $.ajax({
          url: "/api/subcategoryview/checkSubcategoryName?sub_categoryname=" + subcategory_name,
          headers: {"authorization": "Bearer " + token},
          success: function(result){
            if (result == true) {
              $("#sub-category-name").html("Already Exist!").addClass('text-danger').show();
              submitBtn.setAttribute("disabled", "");
            } else {
              $("#sub-category-name").hide();
              submitBtn.removeAttribute("disabled");
            }
            
          }
        });
      });

      $('#entryForm').ajaxForm({
        success: function(data) {
          if (data.success) {
            $("#alertTitle").html("Success");
            $("#alertMessage").html("Save Success!");
            $("#alert").addClass("alert-success").show();

            var postFrm = $('#postSuccessForm');
            var params = $.url(postFrm.attr('action')).param();
            if (!params) {
              for(var key in params) {
                postFrm.append($('<input type="hidden" name="'+key+'" value="'+ params[key] +'" />'));
              }
            }
            window.setTimeout(function(){
              postFrm.submit();
            }, 2 * 1000);

          } else {
            $("#alertTitle").html("Error");
            $("#alertMessage").html("Error on save!");
            $("#alert").addClass("alert-danger").show();
          }
        }
      });
    });