extends ../../includes/layout-dashboard

block content
  ol.breadcrumb
    li.breadcrumb-item
      a(href="/dashboard") Home
    li.breadcrumb-item
      a(href="/city") City
    li.breadcrumb-item.active
      span Entry
  h1.page-header City Entry
  div.row.from-wrapper
    div.alert.alert-dismissible#alert(role='alert')
      strong.alert-title#alertTitle
      span#alertMessage
      button.close(type='button', data-hide='alert', aria-label='Close')
        span(aria-hidden='true') &times;

    form.form-horizontal#entryForm(method='post', action=`${postUrl}`, autocomplete='off')
      input#recordid(type='hidden', name='id', value=params.id)
      input#createddate(type='hidden', name='createddate', value=params.createddate)
      input#cities(type='hidden', name='cities', value=cities)

      div.form-group.row
        label.col-sm-3.control-label.pt-2(for='regionid') Region
        div.col-sm-9
          select#regionid.selectpicker.form-control.mm(name='regionid', value=params.regionid, data-value=params.regionid, data-live-search="true", data-size="8", required)
            option(value="") [Select one]

      div.text-right#city-name
      div.form-group.row
        label.col-sm-3.control-label.pt-2.mm(for="cityname") City 
        div.col-sm-9 
          input.form-control#cityname.mm(type='text',name='cityname',value=params.cityname, maxlength="55", required)

      div.form-group.row
        label.col-sm-3.control-label(for='description') Description
        div.col-sm-9
          input.form-control.mm#description(type='text', name='description', value=params.description)

      div.row.justify-content-center.form-actions
        button.btn.btn-primary#submitBtn(type='submit', role='button') Save
        a.btn.btn-secondary#actionCancel(href=listUrl, role='button') Cancel

    form#postSuccessForm(method='GET', action=listUrl)
  script.
    $(document).ready(function() {
      var token = "!{token}";
      $('div.sidebar-sticky li.nav-item').removeClass('active');
      $('li#menu-city').addClass('active');
      $('div#general_subitems').addClass('show');
      $("#alert").hide();

      $('select#regionid').Template({
        "template": "<option value='${=id}'>${=region}</option>",
        "ajax": {
          url: "/api/region",
          "headers": { "authorization": "Bearer " + token },
          "dataSrc": "region"
        }
      }).on('completed', function() {
        var selectedVal = $('#regionid').data('value');
        if (selectedVal) {
          $("#regionid option[value='" + selectedVal + "']").prop('selected', true);
          //- $("#regionid").selectpicker('val', selectedVal);
        }
        $('#regionid').selectpicker('refresh');
      });


      $("#city-name").hide();
      $("#cityname").on('change keyup',function(){
        var ori_city = $("#cities").val();
        console.log("ori city ", ori_city);
        console.log("type ori city name ", typeof ori_city);
        ori_city = JSON.parse(ori_city);
        console.log("ori city name 2 ", ori_city);
        var new_city = $("#cityname").val();
        console.log("new city name ", new_city);
        var isExit = false;
        var submitBtn = document.getElementById("submitBtn");
        
        ori_city.forEach(city => {
          if (!isExit) {
            if (city.cityname == new_city) {
              isExit = true;
              $("#city-name").html("Already Exist!").addClass('text-danger').show();
              submitBtn.setAttribute("disabled", "");
            }
          }
        })
        if (!isExit) {
          $("#city-name").hide();
          submitBtn.removeAttribute("disabled");
        }
      });

      $('#entryForm').ajaxForm({
        success: function(data) {
          if (data.success) {
            $("#alertTitle").html("Success");
            $("#alertMessage").html("Save Success!");
            $("#alert").addClass("alert-success").show();

            var postFrm = $('#postSuccessForm');
            var params = $.url(postFrm.attr('action')).param();
            if (!params) {
              for(var key in params) {
                postFrm.append($('<input type="hidden" name="'+key+'" value="'+ params[key] +'" />'));
              }
            }
            window.setTimeout(function(){
              postFrm.submit();
            }, 2 * 1000);

          } else {
            $("#alertTitle").html("Error");
            $("#alertMessage").html("Error on save!");
            $("#alert").addClass("alert-danger").show();
          }
        }
      });
    });