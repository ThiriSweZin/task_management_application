extends ../../includes/layout-dashboard

block content
  ol.breadcrumb
    li.breadcrumb-item
      a(href="/dashboard") Home
    li.breadcrumb-item
      a(href="/customer_favorite") Customer Favorite
    li.breadcrumb-item.active
      span Edit
  h1.page-header Customer Favorite
  div.row.from-wrapper
    div.alert.alert-dismissible#alert(role='alert')
      strong.alert-title#alertTitle
      span#alertMessage
      button.close(type='button', data-hide='alert', aria-label='Close')
        span(aria-hidden='true') &times;

    form.form-horizontal#entryForm(method='GET', action="/customer_favorite/detail")
      input#recordid(type='hidden', name='id', value=params.id)
      input#createddate(type='hidden', name='createddate', value=params.createddate)

      div.form-group.row
        label.col-sm-2.control-label(for='name') Customer Name
        div.col-sm-10
          input.form-control.mm#name(type='text', name='name', value=params.name, readonly)

      div.form-group.row
        label.col-sm-2.control-label(for='productname') Product
        div.col-sm-10
          input.form-control.mm#productname(type='text', name='productname', value=params.productname, readonly)

      div.form-group.row
        label.col-sm-2.control-label(for='date') Date
        div.col-sm-10
          input.form-control.mm#date(type='text',name='date', value=params.date, readonly)    

      div.row.justify-content-center.form-actions
        //- button.btn.btn-primary(type='submit', role='button') Save
        a.btn.btn-secondary#actionCancel(href=listUrl, role='button') Back

    form#postSuccessForm(method='GET', action=listUrl)
  script.
    $(document).ready(function() {
      $('div.sidebar-sticky li.nav-item').removeClass('active');
      $('li#menu-customer_favorite').addClass('active');
      $('div#customer_subitems').addClass('show');

      $("#alert").hide();
      var token = "!{token}";
      const product = $("#productname").val();
      console.log("product >>", product);
      const date = $("#date").val();
      console.log("date >>", date);
      $('#entryForm').ajaxForm({
        success: function(data) {
          if (data.success) {
            $("#alertTitle").html("Success");
            $("#alertMessage").html("Save Success!");
            $("#alert").addClass("alert-success").show();

            var postFrm = $('#postSuccessForm');
            var params = $.url(postFrm.attr('action')).param();
            if (!params) {
              for(var key in params) {
                postFrm.append($('<input type="hidden" name="'+key+'" value="'+ params[key] +'" />'));
              }
            }
            window.setTimeout(function(){
              postFrm.submit();
            }, 2 * 1000);

          } else {
            $("#alertTitle").html("Error");
            $("#alertMessage").html("Error on save!");
            $("#alert").addClass("alert-danger").show();
          }
        }
      });
    });