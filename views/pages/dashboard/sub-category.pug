extends ../../includes/layout-dashboard

block content
  ol.breadcrumb
    li.breadcrumb-item
      a(href="/dashboard") Home
    li.breadcrumb-item.active
      span Sub Category
  h1.page-header Sub Category
  include ../../includes/delete-confirm

  form.form-horizontal#entryForm(method='post', action=`${postUrl}`, enctype="application/x-www-form-urlencoded", autocomplete='off')

    div.form-group.row
      label.col-sm-2.control-label(for='categoryid') Category
      div.col-sm-7
        select.form-control.mm.selectpicker#categoryid(name="categoryid")
          option(value="") [Select one]
     
    div.row.justify-content-center.form-actions
      button.btn.btn-primary#loadBtn(type='button', role='button') Load 

  div.table-responsive
    table#list.table.table-striped
      thead
        tr
          th #
          th Category
          th Sub Category
          th.actions-2
            a#adder.btn.btn-success.list-action-text(href="./sub-category/entry", role="button", title="Add")
              i.fa.fa-plus
      tbody
  script.
    $(document).ready(function() {
      var token = "!{token}";
      console.log("token ", token);
      $('div.sidebar-sticky li.nav-item').removeClass('active');
      $('li#menu-sub-category').addClass('active');
      $('div#general_subitems').addClass('show');
      var access = ("#{permission.access}").split(",");
      console.log("access ", access);
      if (access[1] != "1") $("#adder").hide();

      $.fn.dataTable.ext.errMode = 'none';

      $("#categoryid").Template({
        "template": "<option value='${=id}'>${=category}</option>",
        "ajax": {
          url: "/api/category?order=category+0,asc",
          "headers": { "authorization": "Bearer " + token },
          "dataSrc": "category"
        }
      }).on('completed', function() {
        var selectedVal = $('#categoryid').data('value');
        if (selectedVal) {
          $("#categoryid").selectpicker('val', selectedVal);
        }
        $('#categoryid').selectpicker('refresh');
      });

      reload("");

      $("#loadBtn").on('click', function(event){
        let categoryid = $("#categoryid").val();
        console.log("categoryid ", categoryid);
        reload(categoryid);
      });

      function reload(categoryid){
        var table = $('table#list').on('error.dt', function(e, settings, techNote, message) {
          console.log('DataTables Error: ', message);
          alert('Read data error!');
        }).DataTable({
          destroy: true,
          autoWidth: true,
          ajax: { 
            "url": "/api/subcategoryview/getSubCategoryByCategoryId?categoryid="+categoryid,
            "headers": {"authorization": "Bearer " + token},
            "dataSrc": "data"
          },
          columns: [
              { "data": "id" },
              { "data": "category", "className": "mm" },
              { "data": "sub_category", "className": "mm" },
              { "data": "actions", "className": "nowrap" }
          ],
          columnDefs: [
            { targets: 0, render: dataTableIndexRenderer() },
            { targets: 3, orderable: false, render: dataTableActionsRenderer("./sub-category/edit", "#{permission.access}") }
          ]
        });
      }
      

      $('#dialogDeleteConfirm').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var id = button.data('id');
        $(this).attr('data-id', id);
        $(this).find('#dialogAccept').on('click', function(ev) {
          var deleteUrl = '/sub-category/delete/' + id;
          doDelete(deleteUrl, token, function() {
            table.ajax.reload();
          });
        });
      }).on('hide.bs.modal', function (event) {
        $(this).attr('data-id', '');
        $(this).find('#dialogAccept').off('click');
      });

    });