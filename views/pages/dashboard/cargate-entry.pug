extends ../../includes/layout-dashboard

block content
    ol.breadcrumb
        li.breadcrumb-item
            a(href="/dashboard") Home
        li.breadcrumb-item
            a(href="/cargate") Cat Gate
        li.breadcrumb-item.active
            span Entry
    h1.page-header Car Gate Entry
    div.row.from-wrapper
        div.alert.alert-dismissible#alert(role='alert')
            strong.alert-title#alertTitle
            span#alertMessage
            button.close(type='button', data-hide='alert', aria-label='Close')
                span(aria-hidden='true') &times;

        form.form-horizontal#entryForm(method='post', action=`${postUrl}`, autocomplete='off')
            input#recordid(type='hidden', name='id', value=params.id)
            input#createddate(type='hidden', name='createddate', value=params.createddate)

            div.text-right#cargate-name
            div.form-group.row
                label.col-sm-2.control-label(for='cargatename') Car Gate
                div.col-sm-10
                    input.form-control.mm#cargatename.mm(type='text', name='cargatename', value=params.cargatename, maxlength="55", required autofocus)

            div.form-group.row
                label.col-sm-2.control-label.pt-2(for='cityid') City
                div.col-sm-10
                    select#cityid.selectpicker.form-control.mm(name='cityid', value=params.cityid, data-value=params.cityid, data-live-search="true", data-size="8", required)
                        option(value="") [Select one] 
            
            div.form-group.row
                label.col-sm-2.control-label(for='description') Description
                div.col-sm-10
                    input.form-control.mm#description.mm(type='text', name='description', value=params.description)

            div.row.justify-content-center.form-actions
                button.btn.btn-primary#submitBtn(type='submit', role='button') Save
                a.btn.btn-secondary#actionCancel(href=listUrl, role='button') Cancel

        form#postSuccessForm(method='GET', action=listUrl)
    script.
        $(document).ready(function() {
            var token = "!{token}";
            $('div.sidebar-sticky li.nav-item').removeClass('active');
            $('li#menu-cargate').addClass('active');
            $('div#general_subitems').addClass('show');
            $("#alert").hide();

            $('select#cityid').Template({
                "template": "<option value='${=id}'>${=cityname}</option>",
                "ajax": {
                    url: "/api/city",
                    "headers": { "authorization": "Bearer " + token },
                    "dataSrc": "city"
                }
            }).on( 'completed', function(){
                var selectedVal = $('#cityid').data('value');
                if (selectedVal) {
                    $("#cityid option[value='" + selectedVal +"']").prop('selected', true);
                }
                $('#cityid').selectpicker('refresh');
            });

            //- $("#cargate-name").hide();
            //- $("#cargatename").on('change keyup',function(){
            //-     console.table("category change keyup");
            //-     var recordid = $("#recordid").val();
            //-     var cargatename = $("#cargatename").val();
            //-     $.ajax({
            //-         url: "/api/cargateview/checkCargateName?cargatename=" + cargatename + "&recordid=" + recordid,  
            //-         headers: {"authorization": "Bearer " + token},
            //-         success: function(result){
            //-             if (result == true) {
            //-                 $("#cargate-name").html("Already Exist!").addClass('text-danger').show();
            //-                 submitBtn.setAttribute("disabled", "");
            //-             } else {
            //-                 $("#cargate-name").hide();
            //-                 submitBtn.removeAttribute("disabled");
            //-             }
                        
            //-         }
            //-     });
            //- });

            $("#cargate-name").hide();
            $("#cityid").change(function(){
                console.table("city change keyup");
                var recordid = $("#recordid").val();
                var cargatename = $("#cargatename").val();
                var selected = $('#cityid option:selected').val();
                console.log("selected cityid ", selected);
                $.ajax({
                    url: "/api/cargateview/checkCargateName?cargatename=" + cargatename + "&cityid=" + selected + "&recordid=" + recordid,  
                    headers: {"authorization": "Bearer " + token},
                    success: function(result){
                        if (result == true) {
                            $("#cargate-name").html("Already Exist!").addClass('text-danger').show();
                            submitBtn.setAttribute("disabled", "");
                        } else {
                            $("#cargate-name").hide();
                            submitBtn.removeAttribute("disabled");
                        }
                        
                    }
                });
            });

            $('#entryForm').ajaxForm({
                success: function(data) {
                    if (data.success) {
                        $("#alertTitle").html("Success");
                        $("#alertMessage").html("Save Success!");
                        $("#alert").addClass("alert-success").show();  

                        var postFrm = $('#postSuccessForm');
                        var params = $.url(postFrm.attr('action')).param(); 
                        if (!params) {
                            for(var key in params) {
                                postFrm.append($('<input type="hidden" name="'+key+'" value="'+ params[key] +'" />'));
                            }
                        }
                        window.setTimeout(function(){
                            postFrm.submit();
                        }, 2 * 1000);
                    } else {
                        $("#alertTitle").html("Error");
                        $("#alertMessage").html("Error on save!");
                        $("#alert").addClass("alert-danger").show();
                    }
                }
            });
        });


