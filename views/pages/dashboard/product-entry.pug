extends ../../includes/layout-dashboard

block content
  ol.breadcrumb
    li.breadcrumb-item
      a(href="/dashboard") Home
    li.breadcrumb-item
      a(href="/product") Product
    li.breadcrumb-item.active
      span Entry
  h1.page-header Product Entry
  div.row.from-wrapper
    div.alert.alert-dismissible#alert(role='alert')
      strong.alert-title#alertTitle
      span#alertMessage
      //- button.close(type='button', data-hide='alert', aria-label='Close')
      //-   span(aria-hidden='true') &times;

    form.form-horizontal#entryForm(method='post', action=`${postUrl}`, enctype="application/x-www-form-urlencoded", autocomplete='off')
      input#recordid(type='hidden', name='id', value=params.id)
      input#createddate(type='hidden', name='createddate', value=params.createddate)
      
      //- div.form-group.row
      //-   label.col-sm-2.control-label(for='code') Code
      //-   div.col-sm-10
      //-     input.form-control#code(type='text', name='code', value=params.code, maxlength="25", required autofocus)
      div.form-group.row#imageType
        label.col-sm-2.control-label(for="") Product Images

        div.col-sm-3
          div#product1ImageLabel Product 1
          div.form-image#product1ImageContainer
            div.image-add-continer.container-product1
              button.btn.btn-light.image-add#btnProduct1ImgAdd(type="button")
                span.fa.fa-plus(aria-hidden= true)
            div.image-preview-container.preview-product1
              input#product1Image(type="hidden", name="imageurl1", value=params.imageurl1)
              img.form-image-preview.image-preview.img-preview-product1
              div.image-delete-container
                a.image-delete.image-delete-product1(title='Remove')
                  i.fa.fa-trash

        div.col-sm-3
          div#product1ImageLabel Product 2
          div.form-image#product2ImageContainer
            div.image-add-continer.container-product2
              button.btn.btn-light.image-add#btnProduct2ImgAdd(type="button")
                span.fa.fa-plus(aria-hidden= true)
            div.image-preview-container.preview-product2
              input#product2Image(type="hidden", name="imageurl2", value=params.imageurl2)
              img.form-image-preview.image-preview.img-preview-product2
              div.image-delete-container
                a.image-delete.image-delete-product2(title='Remove')
                  i.fa.fa-trash

        div.col-sm-3
          div#product1ImageLabel Product 3
          div.form-image#product3ImageContainer
            div.image-add-continer.container-product3
              button.btn.btn-light.image-add#btnProduct3ImgAdd(type="button")
                span.fa.fa-plus(aria-hidden= true)
            div.image-preview-container.preview-product3
              input#product3Image(type="hidden", name="imageurl3", value=params.imageurl3)
              img.form-image-preview.image-preview.img-preview-product3
              div.image-delete-container
                a.image-delete.image-delete-product3(title='Remove')
                  i.fa.fa-trash

      div.text-right#product-code
      div.form-group.row
        label.col-sm-2.control-label(for='productcode') Product Code
        div.col-sm-10
          input.form-control.mm#productcode(type='text', name='productcode', value=params.productcode, maxlength="25", required)

      div.form-group.row
        label.col-sm-2.control-label(for='productname') Name
        div.col-sm-10
          input.form-control.mm#productname(type='text', name='productname', value=params.productname, maxlength="255", required)

      div.form-group.row
        label.col-sm-2.control-label(for='categoryid') Category
        div.col-sm-10
          select.form-control.mm.selectpicker#categoryid(name='categoryid', value=params.categoryid, data-value=params.categoryid, data-live-search="true", data-size="8", required)
            option(value="") [Select one]

      div.form-group.row
        label.col-sm-2.control-label(for='subcategoryid') Sub Category
        div.col-sm-10
          select.form-control.mm.selectpicker#subcategoryid(name='subcategoryid', value=params.subcategoryid, data-value=params.subcategoryid, data-live-search="true", data-size="8", required)
            option(value="") [Select one]

      div.form-group.row
        label.col-sm-2.control-label(for='description') Description
        div.col-sm-10
          textarea.form-control.mm#description(name='description')= params.description

      div.form-group.row
        label.col-sm-2.control-label(for='ifpackage') Package
        div.col-sm-10
          input.form-check-input#ifpackage(type='checkbox', name='ifpackage', value="package", checked = false)
          
      div.form-group.row   
        label.col-sm-2.control-label(for='itemcount') Item Count
        div.col-sm-10
          input.form-control#itemcount(type='number', name='itemcount', min="0", value=params.itemcount, maxlength="55", readonly)
          //- input.form-control#tax(class='container text-right', type='number', name='tax', onInput='edValueKeyPress()', value=params.tax, maxlength="55", required autofocus)
        

      //- div.form-group.row
        label.col-sm-2.control-label(for='itemcount') Item Count
        div.col-sm-10
          input.form-control#itemcount(type='text', name='itemcount', value=params.itemcount, maxlength="10", role="number", required)

      div.form-group.row
        label.col-sm-2.control-label(for='price') Price
        div.col-sm-10
          input.form-control#price(type='text', name='price', value=params.price, maxlength="12", role="number", required)

      if (params.id && params.id != "") 
        div.form-group.row
          label.col-sm-2.control-label(for='status') Status
          div.col-sm-10
            select.form-control.selectpicker#status(name='status', value=params.status, data-value=params.status, data-live-search="true", data-size="8", required)
              option(value=0) Inactive
              option(value=1) Active
        
      div.row.justify-content-center.form-actions
        button.btn.btn-primary#submitBtn(type='submit', role='button') Save
        a.btn.btn-secondary#actionCancel(href=listUrl, role='button') Cancel

    form#postSuccessForm(method='GET', action=listUrl)

  script(src='/js/upload.js')
  script(src='/js/scripts-upload.js')
  script.
    var token = "!{token}";    

  script(src='/js/product-entry.js')